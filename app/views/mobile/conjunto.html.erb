<%
if @conjunto.tipo == 'CoordenacaoEncontro'
	titulo_conjunto = "Coordenação do Encontro"
else
	titulo_conjunto = "#{@conjunto.tipo_do_conjunto} #{@conjunto.nome}"
end
%>

<h1><%= titulo_conjunto %></h1>

<% if @conjunto.cor.present? %>
	<b>Cor:</b> <span style="color: <%= @conjunto.cor.hex_cor %>;"><%= @conjunto.cor.nome %></span><br/>
<% end %>

<b>Encontro:</b> <%= @conjunto.encontro.nome %><br/>
<b>Data:</b> <%= @conjunto.encontro.data %>

<br/>
<br/>

<%= render 'lista_pessoas', conjunto: @conjunto, pessoas: @conjunto.pessoas, tipo_pagina: 'pessoas_no_conjunto', forcar_conjuges: false, mostrar_telefones: true %>