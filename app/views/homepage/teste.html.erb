<script>
	function carregarInformacoesFacebook() {
    var url = $('#url').val();

    $.ajax({
      method: "post", 
      url: "<%= pegar_informacoes_facebook_pelo_link_url %>",
      data: {
        "url": url
      },
      dataType: "json", 
      success: function (resposta) {
      	console.log(resposta);
      }
    });
	}

	$(function () {
		$('#form_pegar_info').on('submit', function (evento) {
			evento.preventDefault();
			carregarInformacoesFacebook();
		});
	});
</script>

